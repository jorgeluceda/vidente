        .menu-header
            .mh-contents
                h6 Groups
                | &nbsp; &nbsp;
                button(href="" ontouchstart="")
                    span New Group
            .border-bottom

        .menu
            .menu-contents
                - var longList = false
                - var groupCount = 2

                    .strapline.strapline-short(id="strapline-short")
                        - if(groups)
                            +printGroups(groupCount)
                            - if(groups.groupsArray.length > groupCount)
                                    - longList = true
                        
                        +printExtraStrapline(groupCount)
      
                    - if(longList)
                        .strapline.strapline-long
                            - var groupCount = 11
                            +printGroups(groupCount)
                            +printExtraStrapline(groupCount)

        .headline
            .headline-contents
                | &emsp;
                h6 Group 1
